{
  "name": "restyles",
  "version": "0.0.4",
  "description": "cssinjss",
  "jsnext:main": "dist/restyles.es.js",
  "module": "dist/restyles.es.js",
  "main": "dist/restyles.js",
  "umd:main": "dist/restyles.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all clean -p rollup -p minify:* -s size",
    "clean": "rimraf dist",
    "test": "standard src test && jest --coverage",
    "test:watch": "jest --watch",
    "rollup": "rollup -c",
    "minify:cjs": "uglifyjs $npm_package_main -cm toplevel -o $npm_package_main -p relative --in-source-map ${npm_package_main}.map --source-map ${npm_package_main}.map",
    "minify:umd": "uglifyjs $npm_package_umd_main -cm -o $npm_package_umd_main -p relative --in-source-map ${npm_package_umd_main}.map --source-map ${npm_package_umd_main}.map",
    "size": "echo \"Gzipped Size: $(strip-json-comments --no-whitespace $npm_package_main | gzip-size)\"",
    "release": "npm run test && npm run build && npm version patch && npm publish && git push --tags"
  },
  "dependencies": {
    "babel-macros": "^0.5.2",
    "emotion": "^7.0.11"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "gzip-size-cli": "^2.0.0",
    "hapi": "^16.1.0",
    "jest": "^20.0.1",
    "jest-glamor-react": "^3.1.0",
    "npm-run-all": "^4.0.2",
    "pretty-bytes-cli": "^2.0.0",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "react": "^16.0.0-alpha.12",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^16.0.0-alpha.12",
    "react-test-renderer": "^16.0.0-alpha.12",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard": "^10.0.2",
    "strip-json-comments-cli": "^1.0.1",
    "uglify-js": "2.8.23"
  },
  "author": "Kye Hohenberger",
  "homepage": "https://github.com/tkh44/restyles#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkh44/restyles.git"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "styles",
    "restyles",
    "react",
    "css",
    "css-in-js"
  ],
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/dist/"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "jest-glamor-react"
    ]
  },
  "bugs": {
    "url": "https://github.com/tkh44/restyles/issues"
  }
}
